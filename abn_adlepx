# 🔧 التهيئة
def setup():
    os.makedirs("sounds", exist_ok=True)
    os.makedirs("modules", exist_ok=True)
    os.makedirs("output", exist_ok=True)
    os.makedirs("database", exist_ok=True)

# 🎨 البانر
def show_banner():
    os.system("clear")
    colors = [Fore.RED, Fore.GREEN, Fore.YELLOW, Fore.BLUE, Fore.MAGENTA, Fore.CYAN]
    print(random.choice(colors) + pyfiglet.figlet_format("ABN ADLEPX", font="doom"))
    print(Fore.WHITE + "═" * 60)
    print(Fore.CYAN + "🔥 v15.0 | الأسطورة النهائية - جميع المميزات!")
    print(Fore.WHITE + "═" * 60 + Style.RESET_ALL)

# 🔊 الصوت
def play_sound(sound="intro"):
    try:
        mixer.init()
        mixer.Sound(f"sounds/{sound}.mp3").play()
        time.sleep(3)
    except:
        pass

# 🔄 التحديث
def check_updates():
    try:
        req = requests.get("https://raw.githubusercontent.com/abn_adlepx/version/main/ver.txt", timeout=5)
        if req.text.strip() != "15.0":
            print(Fore.RED + "\n⚠️ يوجد تحديث جديد! استخدم git pull" + Style.RESET_ALL)
    except:
        print(Fore.YELLOW + "\n⚠️ لا يمكن الاتصال بالسيرفر" + Style.RESET_ALL)

# 📱 اختراق وسائل التواصل
