# 🏁 القائمة الرئيسية
def main_menu():
    setup()
    play_sound()
    
    while True:
        show_banner()
        check_updates()
        
        print(Fore.GREEN + "\n[1] " + Fore.WHITE + "اختراق وسائل التواصل")
        print(Fore.GREEN + "[2] " + Fore.WHITE + "اختراق الشبكات والأجهزة")
        print(Fore.GREEN + "[3] " + Fore.WHITE + "إنشاء فيروسات متطورة")
        print(Fore.GREEN + "[4] " + Fore.WHITE + "أدوات التخفي المتقدم")
        print(Fore.GREEN + "[5] " + Fore.WHITE + "هاك الألعاب والبرامج")
        print(Fore.GREEN + "[6] " + Fore.WHITE + "أدوات الأقمار الصناعية")
        print(Fore.GREEN + "[7] " + Fore.WHITE + "دعم القناة")
        print(Fore.RED + "[8] " + Fore.WHITE + "الخروج" + Style.RESET_ALL)
        
        choice = input(Fore.MAGENTA + "\n👉 الاختيار: " + Style.RESET_ALL)
        
        if choice == "1":
            social_hack()
        elif choice == "2":
            wifi_hack()
        elif choice == "3":
            virus_creator()
        elif choice == "4":
            stealth_tools()
        elif choice == "5":
            game_hacks()
        elif choice == "6":
            satellite_tools()
        elif choice == "7":
            webbrowser.open("https://youtube.com/@abnadlep?sub_confirmation=1")
            print(Fore.GREEN + "\n✅ شكراً لدعمك القناة!" + Style.RESET_ALL)
        elif choice == "8":
            print(Fore.YELLOW + "\n🔥 تذكر: الاستخدام الأخلاقي فقط!" + Style.RESET_ALL)
            time.sleep(2)
            sys.exit()
        else:
            print(Fore.RED + "❌ اختيار خاطئ!" + Style.RESET_ALL)
            time.sleep(1)

if __name__ == "__main__":
    try:
        main_menu()
    except Exception as e:
        print(Fore.RED + f"❌ خطأ: {e}" + Style.RESET_ALL)
        time.sleep(3)